<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/tableFragment"
        android:name="com.zuehlke.jhp.bucamp.android.jass.TableFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        tools:layout="@layout/table_fragment" />

    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.zuehlke.jhp.bucamp.android.jass.ScoreFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/score_fragment" />
    
    <fragment
        android:id="@+id/handFragment"
        android:name="com.zuehlke.jhp.bucamp.android.jass.HandFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        tools:layout="@layout/hand_fragment" />

</LinearLayout>